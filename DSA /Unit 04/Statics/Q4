Roll Number: 102, Name: Jane, Grades: 92.00
Exiting program.
ðŸŸ¦ C++ Code 

#include <iostream>
#include <iomanip>
using namespace std;

struct Node {
    int roll;
    string name;
    float grade;
    Node* left;
    Node* right;
};

Node* createNode(int r, string n, float g) {
    Node* temp = new Node();
    temp->roll = r;
    temp->name = n;
    temp->grade = g;
    temp->left = nullptr;
    temp->right = nullptr;
    return temp;
}

Node* insert(Node* root, int r, string n, float g) {
    if (root == nullptr)
        return createNode(r, n, g);
    if (r < root->roll)
        root->left = insert(root->left, r, n, g);
    else if (r > root->roll)
        root->right = insert(root->right, r, n, g);
    return root;
}

Node* findMin(Node* root) {
    while (root && root->left)
        root = root->left;
    return root;
}

Node* deleteNode(Node* root, int r, bool &found) {
    if (root == nullptr)
        return nullptr;

    if (r < root->roll)
        root->left = deleteNode(root->left, r, found);
    else if (r > root->roll)
        root->right = deleteNode(root->right, r, found);
    else {
        found = true;
        if (root->left == nullptr) {
            Node* temp = root->right;
            delete root;
            return temp;
        }
        if (root->right == nullptr) {
            Node* temp = root->left;
            delete root;
            return temp;
        }
        Node* temp = findMin(root->right);
        root->roll = temp->roll;
        root->name = temp->name;
        root->grade = temp->grade;
        root->right = deleteNode(root->right, temp->roll, found);
    }
    return root;
}

Node* search(Node* root, int r) {
    if (root == nullptr || root->roll == r)
        return root;
    if (r < root->roll)
        return search(root->left, r);
    return search(root->right, r);
}

void inorder(Node* root) {
    if (root == nullptr)
        return;
    inorder(root->left);
    cout << "Roll Number: " << root->roll << ", Name: " << root->name
         << ", Grades: " << fixed << setprecision(2) << root->grade << endl;
    inorder(root->right);
}

int main() {
    Node* root = nullptr;
    int choice;

    while (true) {
        cin >> choice;

        if (choice == 1) {
            int r;
            string n;
            float g;
            cin >> r >> n >> g;
            root = insert(root, r, n, g);
        }

        else if (choice == 2) {
            int r;
            cin >> r;
            bool found = false;
            root = deleteNode(root, r, found);
            if (!found)
                cout << "Student not found." << endl;
        }

        else if (choice == 3) {
            int r;
            cin >> r;
            Node* res = search(root, r);
            if (res)
                cout << "Student found - Roll Number: " << res->roll
                     << ", Name: " << res->name
                     << ", Grades: " << fixed << setprecision(2)
                     << res->grade << endl;
            else
                cout << "Student not found." << endl;
        }

        else if (choice == 4) {
            cout << "Student Database (inorder):" << endl;
            inorder(root);
        }

        else if (choice == 5) {
            cout << "Exiting program." << endl;
            break;
        }
    }
    return 0;
}
